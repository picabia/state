{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "files.exclude": {
    "**/.git": true,
    "**/.nyc_output": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/coverage": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "search.exclude": {
    "**/.nyc_output": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/coverage": true
  },
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true
}
